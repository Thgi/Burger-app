
<img id="burger" src="/assets/img/burgure.jpg">
<h1>Eat-Da-Burger!</h1>

<form class="create-update-form" action="/" method="POST">
  <div class="form-group">
    <label for="bur"></label>
    <input type="text" id="bur" name="burger_name" placeholder="Wow...it tasts good!">
  </div>
  <button class="button" type="submit">Submit</button>
  <h4>Enter a burger you want to eat Click the "Submit" button</h4>
</form>


<div id="left">
  <ol>
    {{#each burgers}}
      {{#unless this.devoured}}
        <li>
          {{this.burger_name}}
            <div class="text">
              <form action="/{{this.id}}?_method=PUT" method="POST">
                <input type="hidden" name="devoured" value="true">
                  <button class="devour" type="submit">Devour it!</button>
              </form><br>
            </div>
        </li>
      {{/unless}}
    {{/each}}
  </ol>
</div>




<div id="right">
  <ol>
    {{#each burgers}}
      {{#if this.devoured}}
        <li>
          {{this.burger_name}}
            <form action="/{{this.id}}?_method=PUT" method="POST">
              <input type="hidden" name="devoured" value="false">
            </form><br>
        </li>
      {{/if}}
    {{/each}}
  </ol>
</div>
